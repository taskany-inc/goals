{
  "name": "taskany-goals",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run watch:nexus\" \"npm run watch:genql\" \"npm run watch:types\" \"next dev\"",
    "build": "npm run generate && next build",
    "start": "next start",
    "lint": "next lint && eslint --ext .js,.ts,.tsx .",
    "generate:i18n": "generate-i18n --func=tr --langs=ru,en --path='./src/{components,hooks,i18n}/**/*' --getLang='./src/i18n/getLang'",
    "generate:types": "node ./scripts/types.js",
    "generate:nexus": "ts-node --transpile-only -P nexus.tsconfig.json src/pages/api/graphql",
    "generate:genql": "genql --schema ./graphql/schema.graphql --output ./graphql/@generated/genql",
    "watch:types": "nodemon --exec 'npm run generate:types' --watch 'src/pages/help/**/*.md'",
    "watch:nexus": "nodemon --exec 'npm run generate:nexus' --ext 'ts' --watch '*/graphql/**/*.ts' -r dotenv/config",
    "watch:genql": "nodemon --exec 'npm run generate:genql'  --watch 'graphql/schema.graphql'",
    "generate": "concurrently \"npm run generate:nexus\" \"npm run generate:genql\" \"npm run generate:types\"",
    "db:run": "docker-compose -f docker-compose.dev.yml up -d",
    "db:down": "docker-compose down",
    "db:update": "ts-node -r dotenv/config --compiler-options {\"module\":\"CommonJS\"} unsafe-prod-db-update.ts",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install",
    "type-check": "npx tsc"
  },
  "prisma": {
    "seed": "ts-node -r dotenv/config --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.312.0",
